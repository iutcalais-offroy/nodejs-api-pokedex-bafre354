generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum PokemonType {
  Normal
  Fire
  Water
  Electric
  Grass
  Ice
  Fighting
  Poison
  Ground
  Flying
  Psychic
  Bug
  Rock
  Ghost
  Dragon
  Dark
  Steel
  Fairy
}

model Card {
  id            Int         @id @default(autoincrement())
  name          String
  hp            Int
  attack        Int
  type          PokemonType
  pokedexNumber Int
  imgUrl        String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  deckCards     Deckcard[]
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Deck      Deck[]
}

model Deck {
  id        Int        @id @default(autoincrement())
  name      String
  userID    Int
  user      User       @relation(fields: [userID], references: [id])
  deckCards Deckcard[]

  @@unique([userID, name])
}

model Deckcard {
  id       Int @id @default(autoincrement())
  deckID   Int
  cardID   Int
  position Int

  deck Deck @relation(fields: [deckID], references: [id])
  card Card @relation(fields: [cardID], references: [id])

  @@unique([deckID, position])
  @@unique([deckID, cardID])
}
